<div class="row">
  <% @users.each do |user| %>
    <div class="col-md-3">
      <div class="well user-list-wells">
        <div class="row">
          <div class="col-md-6">
            <%= image_tag profile_pic(user), class: 'profile-pic'%>
          </div>
          <div class="col-md-6">
            <p>
              <% if current_user.bookings.include?(user.id) %>
                <%= link_to "Booked", your_profile_path(id: user.id), class: "btn btn-primary", id: "booked_btn" %>
              <% else %>
                <% if current_user.id != user.id %>
                  <%= link_to "Book", your_profile_path(id: user.id), class: "btn btn-primary" %>
                <% end %>
              <% end %>
            </p>
          </div>
        </div>
        <div class="row">
          <%= link_to your_profile_path(id: user.id) do %>
            <h3><%= user.name %></h3>
            <p><%= user.username %></p>
          <% end %>
          <p>
            <%= user.bio %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>